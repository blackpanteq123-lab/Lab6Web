<script>
$(document).ready(function(){
    // Hide/Show daftar anime
    $("#hide-list").click(function(){
        $(".anime-list").hide(1000);
    });
    $("#show-list").click(function(){
        $(".anime-list").show(1000);
    });

    // Animasi judul
    $("#animate-title").click(function(){
        $("header").animate({
            fontSize: '40px',
            opacity: '0.8'
        }, 1000).animate({
            fontSize: '24px',
            opacity: '1'
        }, 1000);
    });

    // Jadikan header bisa digeser
    $("header").draggable();
});
</script>
